<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/styles.css" />
    <title>Noodles!</title>
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <nav class="text-center">nav</nav>
    <h1 class="text-center">Noodle app</h1>
    <div class="container justify-content-center">
      <section class="d-none d-md-block row justify-content-center">
        <img
          src="https://thewoksoflife.com/wp-content/uploads/2019/06/scallion-oil-noodles-15.jpg"
          img
        />
      </section>
      <section class="row justify-content-center">
        <h2>List of noodle recipes</h2>
        <ul class="col-10 d-flex flex-wrap justify-content-start">
          <% recipes.forEach((recipe, i)=>{%>
          <div class="col-3 text-center">
            <div class="p-2">
              <img src="<%=recipe.image%>" img />
              <a href="/recipe/<%=i%>"><%=recipe.label%></a>
            </div>
          </div>
          <% });%>
          <br />
        </ul>
      </section>
      <section class="row justify-content-center">
        <ul class="col-10">
          <h2>List of categories</h2>
          <% categories.forEach((cat)=>{ %>
          <a href="/category/?category=<%=cat%>"><%=cat%> recipes</a
          ><br />
          <% }) %>
        </ul>
        <ul class="col-10">
          <h2>Input a new recipe</h2>
          <form action="/input" method="POST">
            <label for="label">recipe label:</label><br />
            <input type="text" id="label" name="label" /><br />
            <label for="ingredients">ingredients:</label><br />
            <input type="text" id="ingredients" name="ingredients" /><br />
            <label for="category">category:</label><br />
            <input type="text" id="category" name="category" /><br />
            <input type="submit" value="Submit" />
          </form>
        </ul>
      </section>
    </div>
  </body>
</html>
